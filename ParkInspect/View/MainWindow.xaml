<Window x:Class="ParkInspect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkInspect"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Height="500"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Command="{Binding Router.SetViewCommand, Source={StaticResource Locator} }" CommandParameter="questions-list">Vragen Beheren</Button>
        <Button Grid.Row="0" Grid.Column="1" Command="{Binding Router.SetViewCommand, Source={StaticResource Locator} }" CommandParameter="templates-list">Templates Beheren</Button>

        <Button Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" Command="{Binding Router.SetViewCommand, Source={StaticResource Locator} }" CommandParameter="Customers-list">Klanten Beheren</Button>
        <Button Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0" Command="{Binding Router.SetViewCommand, Source={StaticResource Locator} }" CommandParameter="employees-list">Werknemers Beheren</Button>
        <ContentControl Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding Router.CurrentView, Source={StaticResource Locator}}" />
    </Grid>
</Window>