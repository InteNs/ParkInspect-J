<Window x:Class="ParkInspect.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkInspect"
        xmlns:view="clr-namespace:ParkInspect.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <StackPanel>
        <Button Command="{Binding ToggleScreenCommand, Source={StaticResource Router} }" CommandParameter="{Binding Test1, Source={StaticResource Locator}}">Test1 Items</Button>
        <Button Command="{Binding ToggleScreenCommand, Source={StaticResource Router} }" CommandParameter="{Binding Test2, Source={StaticResource Locator}}">Test2 Items</Button>
        <ContentControl Content="{Binding CurrentView, Source={StaticResource Router}}" />
    </StackPanel>
</Window>
