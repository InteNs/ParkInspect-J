<Page x:Class="ParkInspect.View.ManagementViewMap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lib="clr-namespace:ParkInspect.Lib"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ManagementViewMap"
      DataContext="{Binding Map, Source={StaticResource Locator}}">
    <Grid>
        <GroupBox Name="Map" Header="Map" Margin="10,60,10,10" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <lib:Map x:Name="MainMap" Zoom="13" MinZoom="14" MaxZoom="17" />
        </GroupBox>
    </Grid>
</Page>
