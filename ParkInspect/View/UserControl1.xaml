<UserControl x:Class="ParkInspect.View.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Test1, Source={StaticResource Locator}}">
    <Grid>
        <Button Content="To Test2" Command="{Binding ToggleScreenCommand, Source={StaticResource Router} }" CommandParameter="{Binding Test2, Source={StaticResource Locator}}" HorizontalAlignment="Left" Height="69" Margin="0,84,0,0" VerticalAlignment="Top" Width="105"/>
        <ListView ItemsSource="{Binding ItemCollection}" Margin="118,32,65,47" BorderBrush="#FF979494">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Naam" DisplayMemberBinding="{Binding Naam}" Width="105"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
