@model IEnumerable<ParkInspectPortal.Models.InspectionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Inspectie rapporten</h2>

@if (!String.IsNullOrWhiteSpace(ViewBag.Error))
{
    Html.Raw(ViewBag.Error);
}
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Van
            </th>
            <th>
                Tot
            </th>
            <th>
                Acties
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeStart)
                </td>
                <td>
                    @if (item.DateTimeEnd == null)
                    {
                        @Html.Display("Heden")
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.DateTimeEnd)
                    }
                </td>
                <td><a class="btn btn-primary" href="/Home/Download/@item.Guid"><i class="fa fa-cloud-download" aria-hidden="true"></i> Download rapport</a></td>
                &nbsp;
                <td><a class="btn btn-primary" href="/Home/Download/@item.Guid"><i class="fa fa-link" aria-hidden="true"></i> Kopiëer link</a></td>
            </tr>
        }

    </table>
}
else
{
  @Html.Raw("<br><h5 style=\"font-style: italic;\">Er zijn geen raporten beschikbaar!</h5>");
}
